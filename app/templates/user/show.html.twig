{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.profile'|trans({'%id%': user.id|default('')}) }}
{% endblock %}

{% block body %}
    <div style="display: flex; justify-content: center; align-items: center; height: 100vh;">
        <div style="border: 1px solid #ccc; padding: 20px; border-radius: 5px; width: 400px; text-align: center;">
            <h1 style="margin-bottom: 20px;">{{ 'title.profile'|trans({'%id%': user.id|default('')}) }}</h1>
            {% if user is defined and user|length %}
                <dl style="margin-bottom: 20px;">
                    <div style="margin-bottom: 10px;">
                        <dt style="font-weight: bold;">{{ 'user.id'|trans }}</dt>
                        <dd>{{ user.id }}</dd>
                    </div>
                    <div style="margin-bottom: 10px;">
                        <dt style="font-weight: bold;">{{ 'user.email'|trans }}</dt>
                        <dd>{{ user.email }}</dd>
                    </div>
                    <div style="margin-bottom: 10px;">
                        <dt style="font-weight: bold;">{{ 'label.edit'|trans }}</dt>
                        {% if is_granted('EDIT_USER', user) %}
                            <dd>
                                <a href="{{ url('user_edit_email', {'id': user.id}) }}" style="text-decoration: none; color: blue;">
                                    Edit Email
                                </a>
                            </dd>
                            <dd>
                                <a href="{{ url('user_edit', {'id': user.id}) }}" style="text-decoration: none; color: blue;">
                                    Edit Password
                                </a>
                            </dd>
                        {% endif %}
                    </div>
                </dl>

                <p>
                    <a href="{{ url('user_index') }}" style="text-decoration: none; padding: 8px 16px; border: 1px solid #ccc; border-radius: 5px; background-color: #f2f2f2;">
                        Back to List
                    </a>
                </p>
            {% else %}
                <p>
                    {{ 'message.record_not_found'|trans }}
                </p>
            {% endif %}
        </div>
    </div>
{% endblock %}

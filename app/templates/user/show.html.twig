{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.user_details'|trans({'%id%': user.id|default('')}) }}
{% endblock %}

{% block body %}
    <div>
        <h1>{{ 'title.user_details'|trans({'%id%': user.id|default('')}) }}</h1>
        {% if user is defined and user|length %}
            <dl>
                <dt>{{ 'user.id'|trans }}</dt>
                <dd>{{ user.id }}</dd>
                <dt>{{ 'user.email'|trans }}</dt>
                <dd>{{ user.email }}</dd>
                <dt>{{ 'label.edit'|trans }}</dt>
                {% if is_granted('EDIT_USER_DATA', user) %}
                    <dd>
                        <a href="{{ url('user_edit_email', {'id': user.id}) }}">
                            Edit Email
                        </a>
                    </dd>
                    <dd>
                        <a href="{{ url('user_edit', {'id': user.id}) }}">
                            Edit Password
                        </a>
                    </dd>
                {% endif %}
            </dl>

            <p>
                <a href="{{ url('user_index') }}">
                    Back to List
                </a>
            </p>
        {% else %}
            <p>
                {{ 'message.record_not_found'|trans }}
            </p>
        {% endif %}
    </div>
{% endblock %}

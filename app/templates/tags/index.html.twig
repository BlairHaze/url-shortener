{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.tags_list'|trans }}
{% endblock %}

{% block body %}
    <h1>{{ 'title.tags_list'|trans }}</h1>
    <p>
        <a href="{{ url('tags_create') }}" class="btn btn-primary">
            {{ 'action.create'|trans }}
        </a>
    </p>
    {% if pagination is defined and pagination.items|length %}

        <div class="navigation text-center">
            {{ knp_pagination_render(pagination) }}
        </div>

        <table class="table table-striped">
            <thead>
            <tr>
                <th>{{ knp_pagination_sortable(pagination, 'label.id'|trans, 'tags.id') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'label.name'|trans, 'tags.name') }}</th>
                <th>{{ 'title.tags_edit'|trans }}</th>
                <th>{{ 'title.tags_delete'|trans }}</th>
            </tr>
            </thead>
            <tbody>
            {% for tags in pagination.items %}
                <tr>
                    <td>{{ tags.id }}</td>
                    <td>{{ tags.name }}</td>

                    <td>
                        <a href="{{ url('tags_show', {id: tags.id}) }}" title="{{ 'action.show'|trans }}">
                            {{ 'action.show'|trans }}
                        </a>
                    </td>

            {% endfor %}
            </tbody>
        </table>

        <div class="navigation text-center">
            {{ knp_pagination_render(pagination) }}
        </div>

    {% endif %}
{% endblock %}
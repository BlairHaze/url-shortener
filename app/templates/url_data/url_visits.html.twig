{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.url_visits'|trans }}
{% endblock %}

{% block body %}
    <h1 class="text-center">{{ 'title.url_visits'|trans }}</h1>

    {% if pagination is defined and pagination.items|length %}

        <div class="navigation text-center">
            {{ knp_pagination_render(pagination) }}
        </div>

        <table class="table table-striped">
            <thead>
            <tr>
                <th>{{ 'label.count'|trans }}</th>
                <th>{{ 'label.short_name'|trans }}</th>
                <th>{{ 'label.url'|trans }}</th>
            </tr>
            </thead>
            <tbody>
            {% for urlData in pagination.items %}
                <tr>
                    <td>{{ urlData.visits }}</td>
                    <td>
                        <a href="{{ url('url_redirect_index', {'shortName' : urlData.shortName}) }}" title="{{ urlData.shortName }}" target="_blank">
                            {{ absolute_url(url('url_redirect_index', {'shortName' : urlData.shortName})) }}
                        </a>
                    </td>
                    <td>{{ urlData.longName }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <div class="navigation text-center">
            {{ knp_pagination_render(pagination) }}
        </div>

    {% else %}
        <p>
            {% include 'default/_single_alert_message.html.twig' with {
                type: 'warning',
                message: 'message.empty_list'|trans
            } %}
        </p>
    {% endif %}
    </div>
    </div>
    </div>
{% endblock %}
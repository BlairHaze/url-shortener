{% extends 'base.html.twig' %}

{% block title %}
    {{ page_title }}
{% endblock %}

{% block body %}
    <div style="display: flex; justify-content: center; align-items: flex-start; height: 100vh;">
        <div style="border: 1px solid #ccc; padding: 20px; border-radius: 5px; width: 400px; text-align: center; margin-top: 20px;">
            <h1>{{ page_title }}</h1>
            {{ form_start(form) }}
            {% if false == form.vars.valid %}
                <div class="alert alert-danger" role="alert">
                    {{ 'message.form_error'|trans }}
                </div>
            {% endif %}
            {{ form_widget(form) }}
            <div style="display: flex; justify-content: space-between; margin-top: 20px;">
                <div>
                    <a href="{{ url(back_to_list_path) }}" class="btn btn-link">
                        {{ 'action.back_to_list'|trans }}
                    </a>
                </div>
                <div>
                    <input type="submit" value="{{ submit_label }}" class="btn btn-primary"/>
                </div>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}

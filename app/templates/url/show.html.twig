{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.url_show'|trans }}
{% endblock %}

{% block body %}
    <div style="display: flex; justify-content: center; align-items: flex-start; height: 100vh;">
        <div style="border: 1px solid #ccc; padding: 20px; border-radius: 5px; width: 400px; text-align: center; margin-top: 20px;">
            <h1 style="margin-bottom: 20px;">View URL</h1>
            {% if url is defined and url|length %}
                <dl style="margin-bottom: 20px;">
                    <div style="margin-bottom: 10px;">
                        <dt style="font-weight: bold;">Long Name</dt>
                        <dd>{{ url.longName }}</dd>
                    </div>
                    <div style="margin-bottom: 10px;">
                        <dt style="font-weight: bold;">Short Name</dt>
                        <dd>{{ url.shortName }}</dd>
                    </div>
                    <div style="margin-bottom: 10px;">
                        <dt style="font-weight: bold;">Create Time</dt>
                        <dd>{{ url.createTime |format_date('long') }}</dd>
                    </div>
                    <div style="margin-bottom: 10px;">
                        <dt style="font-weight: bold;">Blocked</dt>
                        <dd>{{ url.isBlocked ? 'Yes' : 'No' }}</dd>
                    </div>
                    <div style="margin-bottom: 10px;">
                        <dt style="font-weight: bold;">Blocked Till</dt>
                        <dd>{{ url.blockTime |format_date('long') }}</dd>
                    </div>
                </dl>
                <div style="text-align: center;">
                    <a href="{{ url('list') }}" class="btn btn-primary" title="{{ 'action.back_to_list'|trans }}" style="text-decoration: none; padding: 8px 16px; border-radius: 5px;">
                        {{ 'action.back_to_list'|trans }}
                    </a>
                </div>
            {% else %}
                <p>
                    {{ 'message.empty_list'|trans }}
                </p>
            {% endif %}
        </div>
    </div>
{% endblock %}


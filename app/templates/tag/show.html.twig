{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.tag_show'|trans }}
{% endblock %}

{% block body %}
    <div style="display: flex; justify-content: center; align-items: flex-start; height: 100vh;">
        <div style="border: 1px solid #ccc; padding: 20px; border-radius: 5px; width: 400px; text-align: center; margin-top: 20px;">
            <h1 style="margin-bottom: 20px;">View tag</h1>
            {% if tag is defined and tag|length %}
                <dl style="margin-bottom: 20px;">
                    <div style="margin-bottom: 10px;">
                        <dt style="font-weight: bold;">{{ 'label.id'|trans }}</dt>
                        <dd>{{ tag.id }}</dd>
                    </div>
                    <div style="margin-bottom: 10px;">
                        <dt style="font-weight: bold;">{{ 'label.name'|trans }}</dt>
                        <dd>{{ tag.name }}</dd>
                    </div>
                </dl>

                <div style="text-align: center;">
                    <a href="{{ url('tag_index') }}" class="btn btn-primary" style="text-decoration: none; padding: 8px 16px; border-radius: 5px;">
                        {{ 'action.back_to_list'|trans }}
                    </a>
                </div>
            {% else %}
                <p>
                    {{ 'message.record_not_found'|trans }}
                </p>
            {% endif %}
        </div>
    </div>
{% endblock %}

